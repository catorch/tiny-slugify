{
  "name": "tiny-slugify",
  "version": "1.3.0",
  "description": "Ultra-lightweight, tree-shakable slug generator with optional transliteration",
  "keywords": [
    "slug",
    "slugify",
    "url",
    "transliteration",
    "unicode",
    "tiny",
    "lightweight"
  ],
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "tiny-slugify": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./core": {
      "types": "./dist/core.d.ts",
      "import": "./dist/core.js",
      "require": "./dist/core.cjs"
    },
    "./locale/de": {
      "types": "./dist/de.d.ts",
      "import": "./dist/de.js",
      "require": "./dist/de.cjs"
    },
    "./locale/fr": {
      "types": "./dist/fr.d.ts",
      "import": "./dist/fr.js",
      "require": "./dist/fr.cjs"
    },
    "./locale/hi": {
      "types": "./dist/hi.d.ts",
      "import": "./dist/hi.js",
      "require": "./dist/hi.cjs"
    },
    "./locale/ar": {
      "types": "./dist/ar.d.ts",
      "import": "./dist/ar.js",
      "require": "./dist/ar.cjs"
    },
    "./locale/zh": {
      "types": "./dist/zh.d.ts",
      "import": "./dist/zh.js",
      "require": "./dist/zh.cjs"
    },
    "./locale/sv": {
      "types": "./dist/sv.d.ts",
      "import": "./dist/sv.js",
      "require": "./dist/sv.cjs"
    },
    "./locale/ru": {
      "types": "./dist/ru.d.ts",
      "import": "./dist/ru.js",
      "require": "./dist/ru.cjs"
    },
    "./locale/emoji": {
      "types": "./dist/emoji.d.ts",
      "import": "./dist/emoji.js",
      "require": "./dist/emoji.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest",
    "test:ci": "vitest run",
    "size": "size-limit",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "prepublishOnly": "npm run build && npm run test:ci && npm run size"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/catorch/tiny-slugify.git"
  },
  "license": "MIT",
  "author": "catorch",
  "devDependencies": {
    "@size-limit/preset-small-lib": "^11.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "size-limit": "^11.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18"
  },
  "size-limit": [
    {
      "name": "Core (slugify only)",
      "path": "dist/core.js",
      "limit": "1.3 kB"
    },
    {
      "name": "Full API",
      "path": "dist/index.js",
      "limit": "2 kB"
    },
    {
      "name": "German locale",
      "path": "dist/de.js",
      "limit": "3 kB"
    },
    {
      "name": "French locale",
      "path": "dist/fr.js",
      "limit": "3 kB"
    },
    {
      "name": "Hindi locale",
      "path": "dist/hi.js",
      "limit": "3 kB"
    },
    {
      "name": "Arabic locale",
      "path": "dist/ar.js",
      "limit": "5 kB"
    },
    {
      "name": "Chinese locale",
      "path": "dist/zh.js",
      "limit": "4 kB"
    },
    {
      "name": "Swedish locale",
      "path": "dist/sv.js",
      "limit": "3 kB"
    },
    {
      "name": "Russian locale",
      "path": "dist/ru.js",
      "limit": "10 kB"
    },
    {
      "name": "Emoji locale",
      "path": "dist/emoji.js",
      "limit": "8 kB"
    }
  ]
}
